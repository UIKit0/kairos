<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
<servlet>
	<servlet-name>KairosImapServiceServlet</servlet-name>
	<servlet-class>com.smartmobili.ImapServiceServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>KairosImapAttachmentsServlet</servlet-name>
	<servlet-class>com.smartmobili.ImapAttachmentsServlet</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>KairosImapServiceServlet</servlet-name>
	<url-pattern>/postRequest</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>KairosImapAttachmentsServlet</servlet-name>
	<url-pattern>/getAttachment</url-pattern>
</servlet-mapping>

</web-app>